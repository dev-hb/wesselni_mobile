<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@drawable/cities_card_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
    >

        <TextView
                android:id="@+id/textViewComplaint_fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="Citys"/>

        <TextView
                android:id="@+id/textViewComplaint_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="email"/>

        <TextView
                android:id="@+id/textViewComplaint_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="objet"/>
        <TextView
                android:text="message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewComplaint_message"/>

    </LinearLayout>

</LinearLayout>